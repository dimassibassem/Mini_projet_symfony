{% extends 'base.html.twig' %}
{% block body %}
<head>
    <title>Mesages</title>

<body>

<div class="container-contact100">
    <ul>
        {% if app.user %}
            {% if app.user.roles[0] == "ROLE_ADMIN" %}
                {% for message in messages %}
                    <li>

                        <div class="col mt-4 ">
                            <h4 style="color: #f5a475 !important;" class="titre_articles"> {{ message.subject }}</h4>
                        </div>


                        <div class="mt-4">
                            <h3 style="color: #6462c4 !important;" class="sous_articles text-muted">Nom et
                                Prenom: </h3>{{ message.nom }} {{ message.prenom }}
                        </div>
                        <div class="mt-4">
                            <h3 style="color: #6462c4 !important;" class="sous_articles text-muted">
                                Email: </h3> {{ message.email }}
                        </div>
                        <div class="mt-4">
                            <h3 style="color: #6462c4 !important;" class="sous_articles text-muted"> Message: </h3>
                            <p>{{ message.message }}</p>
                        </div>

                    </li>

                {% endfor %}
            {% endif %}
        {% endif %}
    </ul>
</div>


{% endblock %}

